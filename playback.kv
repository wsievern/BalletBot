#: import playback playback

<Playback>:
    name: "playback"
    FloatLayout:
        #Button:
            #text: 'tap tempo'
            #size_hint: .2, .1
            #pos_hint: {"x":.2, "y":.4}
            #on_press: root.tempo_tap()

        MDIconButton:
            id: play_button
            pos_hint: {'center_x': 0.4, 'center_y': 0.05}
            icon: "play"
            disabled: not root.play_enabled
            on_press:
                root.play_plie_piece()


        MDIconButton:
            id: stop_button
            pos_hint: {'center_x': 0.55, 'center_y': 0.05}
            icon: "stop"
            on_press:
                root.stop_audio()


        Label:
            text: "00:00"
            pos_hint: {'center_x':.16, 'center_y':.145}
            size_hint: (1,1)
            font_size: 18
        Label:
            text: "00:00"
            pos_hint: {'center_x':0.84, 'center_y':.145}
            size_hint: (1,1)
            font_size: 18

        ProgressBar:
            max: 100
            value: 0
            pos_hint: {'center_x':0.5, 'center_y':0.12}
            size_hint: (.8,.75)

