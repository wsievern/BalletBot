MyScreenManager:



<MyScreenManager@NavigationScreenManager>:


    Screen:
        name: "class_overview"
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Plies'
                on_press: root.push('plies')
            Button:
                text: 'Tendus from First'
                on_press: root.push('tendus_from_first')
            Button:
                text: 'Tendus from Fifth'
                on_press: root.push('tendus_from_fifth')
            Button:
                text: 'Jetes'
                on_press: root.push('jetes')
    Screen:
        name: "plies"
        canvas.before:
            Color:
                rgba: (0, 0, 128, 1)
            Rectangle:
                pos:self.pos
                size:self.size
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"
            Button:
                text: 'back'
                size_hint: .1, .1
                on_press: root.pop()
        FloatLayout:
            Label:
                text: "Plies"
                size_hint: .6, .1
                pos_hint: {"x":.25, "top":1}
            Button:
                id: plie_select_piece_title
                text: 'select piece'
                size_hint: .6, .1
                pos_hint: {"x":.25, "y":.8}
                on_press:
                    root.push('piece_selection')

