            #max: 100
            #value: 80
            #orientation: "vertical"
            #size_hint_y: .4
            #pos_hint: {'center_x': .8, 'center_y': .4}

        Label:
            pos_hint: {'center_x': .6, 'center_y': .6}
            text: "BPM"
            font_name: 'GillSans'

        Label:
            pos_hint: {'center_x': .8, 'center_y': .6}
            text: "Volume"
            font_name: 'GillSans'

